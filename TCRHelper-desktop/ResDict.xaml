<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="TextBoxBaseStyle" TargetType="TextBox">
        <Setter Property="Width" Value="50"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="TextAlignment" Value="Right"/>
    </Style>
    <Style x:Key="FunctionButtonBaseType" TargetType="Button">
        <Setter Property="Margin" Value="5"/>
    </Style>
    <Style x:Key="RadioButtonBaseStyle" TargetType="RadioButton">
        <Setter Property="Margin" Value="5,1"/>
    </Style>

    <Style x:Key="IntSliderBaseStyle" TargetType="Slider">
        <Setter Property="Minimum" Value="2"/>
        <Setter Property="Maximum" Value="10"/>
        <Setter Property="LargeChange" Value="3"/>
        <Setter Property="SmallChange" Value="1"/>
        <Setter Property="TickFrequency" Value="1"/>
        <Setter Property="TickPlacement" Value="BottomRight"/>
        <Setter Property="IsSnapToTickEnabled" Value="True"/>
    </Style>
</ResourceDictionary>