<UserControl x:Class="TCRHelperUserControl.LabelTextLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TCRHelperUserControl"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Label x:Name="PrefixLabel" 
                   Content="三个字" HorizontalAlignment="Left" VerticalAlignment="Top" 
                   Margin="2"/>
            <TextBox x:Name="ContentTextBox" 
                     HorizontalAlignment="Center" TextWrapping="Wrap" Text="三个字" 
                     VerticalAlignment="Center" 
                     TextAlignment="Right"
                     Margin="2"/>
            <Label x:Name="SuffixLabel" Content="三个字" Margin="2"/>
        </StackPanel>
    </Grid>
</UserControl>
